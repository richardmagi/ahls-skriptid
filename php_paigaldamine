#skripti algus
#installime php
#kontrollime kas PHP on olemas
PHP=$(dpkg-query -W -f='${Status}' php7.0 2>/dev/null | grep -c 'ok installed')
#kui ei ole olemas
if [ $PHP -eq 0 ]; then
        echo "Paigaldame php ja vajalikud lisad"
        apt install php7.0 libapache2-mod-php7.0 php7.0-mysql
        echo "php on paigaldatud"
#kui on olemas siis kuvatakse teade & versioon
elif [ $PHP -eq 1 ]; then
        echo "php on juba paigaldatud"
        #kontrollime, kas on olemas
        which php

fi
#skripti l√µpp
